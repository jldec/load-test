{
	"name": "@inlang/markdown",
	"type": "module",
	"version": "0.1.0",
	"private": true,
	"files": [
		"./src",
		"./dist"
	],
	"exports": {
		".": "./dist/index.js",
		"./custom-elements": "./dist/custom-elements/index.js",
		"./css": "./dist/css/index.js"
	},
	"scripts": {
		"build": "npx tailwindcss -i ./src/css/style.css -o ./dist/css/style.css && npx prettier ./src --write && tsc --build",
		"dev": "tsc --watch",
		"test": "tsc --noEmit && vitest run",
		"lint": "eslint ./src --fix",
		"format": "prettier ./src --write",
		"clean": "rm -rf ./dist ./node_modules"
	},
	"dependencies": {
		"cheerio": "1.0.0-rc.12",
		"iconify-icon": "1.0.8",
		"lit": "2.8.0",
		"rehype-accessible-emojis": "0.3.2",
		"rehype-autolink-headings": "7.0.0",
		"rehype-class-names": "1.0.14",
		"rehype-highlight": "7.0.0",
		"rehype-raw": "7.0.0",
		"rehype-rewrite": "3.0.6",
		"rehype-sanitize": "6.0.0",
		"rehype-slug": "6.0.0",
		"rehype-stringify": "10.0.0",
		"remark-gfm": "3.0.1",
		"remark-parse": "10.0.2",
		"remark-rehype": "10.1.0",
		"unified": "11.0.3",
		"unist-util-visit": "5.0.0"
	},
	"devDependencies": {
		"tailwindcss": "3.3.3",
		"typescript": "5.3.2",
		"vitest": "0.34.3"
	},
	"license": "Apache-2.0"
}
